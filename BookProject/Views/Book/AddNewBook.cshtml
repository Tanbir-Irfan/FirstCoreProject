@using BookProject.Enums
@model BookModel
@inject BookProject.Repository.ILanguageRepository _languageRepository
@{
    ViewData["Title"] = "Add New Book"; 
}

<div class="container">
    <h1 class="display-4">Add New Book</h1>
    <hr />
    @if (ViewBag.isSuccess == true)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <strong>Congratulations!</strong> You should add new book successfully<br />
            Click <a asp-controller="Book" asp-action="GetBook" asp-route-id="@ViewBag.BookId">here</a> to view the details
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }

