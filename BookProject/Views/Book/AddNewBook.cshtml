<form method="post" enctype="multipart/form-data" asp-action="AddNewBook" asp-controller="Book" novalidate>
    @*<div asp-validation-summary="All" class="text-danger"></div>*@
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="Title"></label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Author"></label>
        <input asp-for="Author" class="form-control" />
        <span asp-validation-for="Author" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="TotalPage"></label>
        <input asp-for="TotalPage" class="form-control" />
        <span asp-validation-for="TotalPage" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="LanguageId"></label>
        <select asp-for="LanguageId" class="form-control" asp-items="(await _languageRepository.GetLanguages()).Select(x => new SelectListItem()
       {
           Text = x.Text,
           Value = x.Id.ToString()
       }).ToList()">
            @*<select asp-for="LanguageId" class="form-control" asp-items="ViewBag.Language">*@
            @*<select asp-for="Language" class="form-control" asp-items="new SelectList(ViewBag.Language, selected)">*@
            <!--<option value="">Please choose A book language</option>
            <option value="Hindi">Hindi Language</option>-->
            @*<option selected>English</option>*@
            <!--<option value="English">English Language</option>
            <option value="Japanese">Japanese Language</option>
            <option value="Dutch">Dutch Language</option>-->
            <option value="">Please choose A book language</option>
        </select>
        <span asp-validation-for="LanguageId" class="text-danger"></span>
    </div>

    <div class="form-group">
        @*<label asp-for="MultiLanguage"></label>
            <select asp-for="MultiLanguage" class="form-control" asp-items="ViewBag.Language" multiple>
                <option value="">Please choose A book language</option>
            </select>
            <span asp-validation-for="MultiLanguage" class="text-danger"></span>*@

        <label asp-for="LanguageEnum"></label>
        <select asp-for="LanguageEnum" class="form-control" asp-items="Html.GetEnumSelectList<LanguageEnum>()">
            <option value="">Please choose A book language</option>
        </select>
        <span asp-validation-for="LanguageEnum" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="CoverPhoto"></label>
        <div class="custom-file">
            <input asp-for="CoverPhoto" class="custom-file-input" id="customFile">
            <label class="custom-file-label" for="customFile">Choose file</label>
        </div>
        <span asp-validation-for="CoverPhoto" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="GalleryPhoto"></label>
        <div class="custom-file">
            <input asp-for="GalleryPhoto" class="custom-file-input" id="customFile">
            <label class="custom-file-label" for="customFile">Choose file</label>
        </div>
        <span asp-validation-for="GalleryPhoto" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="BookPdf"></label>
        <div class="custom-file">
            <input asp-for="BookPdf" class="custom-file-input" id="customFile">
            <label class="custom-file-label" for="customFile">Choose file</label>
        </div>
        <span asp-validation-for="BookPdf" class="text-danger"></span>
    </div>

    <div class="form-group">
        <input type="submit" value="Add Book" class="btn btn-primary" />
    </div>
</form>
</div>

