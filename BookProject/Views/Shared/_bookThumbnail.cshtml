@model BookModel

<div class="card mb-4 shadow-sm">
    <img src="@(string.IsNullOrEmpty(Model.CoverImageUrl) ? "/book-img/cover/1c2340a4-2d24-4eb6-8bbc-f4dbaf7dc163_img7.jpeg" : Model.CoverImageUrl)" class="img-thumbnail" />
    <div class="card-body">
        <h3 class="card-title">@(string.IsNullOrEmpty(Model.Title) ? "Book Title Empty" : Model.Title) </h3>
        <p class="card-text">@(string.IsNullOrEmpty(Model.Description) ? "Book Description Empty" : Model.Description)</p>
        <div class="d-flex justify-content-between align-items-center">
            <div class="btn-group">
                @*asp-all-route-data="@data"*@
                @*asp-fragment="SimilarBooks"*@
                @*<a asp-route="bookDetailsRoute" asp-route-id="@book.Id" class="btn btn-sm btn-outline-secondary">View Details</a>*@

                <a asp-controller="Book" asp-action="GetBook" asp-route-id="@Model.Id" class="btn btn-sm btn-outline-secondary">View Details</a>
            </div>
            <small class="text-muted">@(string.IsNullOrEmpty(Model.Author) ? "Book Author Empty" : Model.Author)</small>
        </div>
    </div>
</div>


